<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ict.springex.mapper.TodoMapper"> <!--namespace : 매핑할 클래스의 위치값-->

    <select id="getTime" resultType="string">    <!--id : 지정 클래스의 메소드이름-->
        select now();
    </select>

    <insert id="insert">
        insert into tbl_todo(title, dueDate,writer) values (#{title}, #{dueDate}, #{writer})
    </insert>

</mapper>